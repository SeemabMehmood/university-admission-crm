<div class="content">
  <div class="row">
    <% if current_user.admin? %>
      <div class="col-md-3">
        <div class="hpanel hbggreen">
          <div class="panel-body">
            <div class="text-center">
              <h3>Total Agents</h3>
              <p class="text-big font-light">
                <%= @agents.count %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if current_user.agent? || current_user.admin? %>
      <div class="col-md-3">
        <div class="hpanel hbgblue">
          <div class="panel-body">
            <div class="text-center">
              <h3>Total Branch Officers</h3>
              <p class="text-big font-light">
              <%= @branch_officers.count %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if current_user.branch_officer? || current_user.agent? || current_user.admin? %>
      <div class="col-md-3">
        <div class="hpanel hbgyellow">
          <div class="panel-body">
            <div class="text-center">
              <h3>Total Counsellors</h3>
              <p class="text-big font-light">
                <%= @counsellors.count %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="col-md-3">
      <div class="hpanel hbgred">
        <div class="panel-body">
          <div class="text-center">
            <h3>Total Applications</h3>
            <p class="text-big font-light">
              0
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
