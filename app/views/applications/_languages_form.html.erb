<div class="hpanel">
  <div class="panel-heading hbuilt h-bg-navy-blue text-white">
    Languages Information
    <div class="pull-right">
      <%= form.add_nested_fields_link :languages, class: "btn btn-xs btn-warning" do %>
        <i class="fa fa-plus-square"></i>
         Add Language
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <%= form.nested_fields_for :languages do |language| %>
      <div class="row">
        <div class="form-group col-md-2 pad-left-0">
          <%= language.label :test_type, class: "control-label" %>
          <%= language.select :test_type, Language::TYPE, { prompt: "- Test Type -" }, required: true, class: "form-control" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= language.label :listening, class: "control-label" %>
          <%= language.text_field :listening, placeholder: "Listening Score", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= language.label :speaking, class: "control-label" %>
          <%= language.text_field :speaking, placeholder: "Speaking Score", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= language.label :reading, class: "control-label" %>
          <%= language.text_field :reading, placeholder: "Reading Score", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= language.label :writing, class: "control-label" %>
          <%= language.text_field :writing, placeholder: "Writing Score", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= language.label :overall, class: "control-label" %>
          <%= language.text_field :overall, placeholder: "Overall Score", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= language.label :scanned_doc, class: "control-label" %>
          <%= language.file_field :scanned_doc, title: "Please Upload Scanned Copy", class: "form-control" %>
          <%= label_tag "files", truncate(language.object.scanned_doc.filename) if language.object.persisted? && language.object.scanned_doc.file.present? %>
        </div>

        <%= link_to "#", class: "btn remove" do %>
          <i class="fa fa-times text-danger"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
