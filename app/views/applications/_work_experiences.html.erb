<div class="panel panel-default">
  <div class="panel-heading" role="tab" id="headingThree">
    <h4 class="panel-title font-bold">
      <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
        Work Experiences
      </a>
    </h4>
  </div>
  <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree" aria-expanded="false">
    <div class="panel-body">
      <% applicant.work_experiences.each do |work_experience| %>
        <div class="row">
          <div class="col-lg-2 border-right">
            <p>Employer: <span class="font-bold"><%= work_experience.employer.titleize %></span></p>
          </div>

          <div class="col-lg-2 border-right">
            <p>Position: <span class="font-bold"><%= work_experience.position.titleize %></span></p>
          </div>

          <div class="col-lg-2 border-right">
            <p>Period: <span class="font-bold"><%= work_experience.period %></span></p>
          </div>

          <div class="col-lg-2 border-right">
            <p>Responsibilities: <span class="font-bold"><%= work_experience.responsibilities %></span></p>
          </div>

          <div class="col-lg-2">
            <% if work_experience.scanned_doc.file.present? %>
              <%= link_to "Scanned Copy", work_experience.scanned_doc.url %>
            <% else %>
              <p>Scanned Copy not found.</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
