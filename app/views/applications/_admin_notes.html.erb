<div class="modal-dialog">
  <div class="modal-content">
    <div class="color-line"></div>
    <div class="modal-header text-center">
      <h4 class="modal-title">Add Admin Note</h4>
      <small class="font-bold"></small>
    </div>
    <div class="modal-body">
      <%= form_with(model: @admin_note, url: { controller: "applications", action: "create_admin_notes" }, method: :post) do |form| %>
        <%= render "shared/error_messages", target: @admin_note %>

        <%= form.hidden_field :application_id, value: @application.id %>

        <div class="row">
          <div class="form-group col-md-12">
            <%= form.label :details, class: "control-label" %>
            <%= form.text_area :details, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= form.button :submit, class: "btn btn-success" do %>
            <i class="fa fa-send-o"></i>
            Add Admin Note
          <% end %>

          <%= link_to "Close", "#", data: { dismiss: "modal" }, class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
