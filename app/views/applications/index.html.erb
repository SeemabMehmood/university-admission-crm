<div class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="hpanel">
        <div class="panel-heading hbuilt">
          Applications: <%= @applications.count %>
          <div class="pull-right">
            <% if can? :create, Application %>
              <%= link_to new_application_path, class: "btn btn-primary btn-xs ripple" do %>
                <i class="fa fa-plus"></i> Add Application
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="panel-body no-shadow">
          <%= render partial: "filterrific_form", locals: { filterrific: @filterrific } %>

          <%= render partial: "applications/list", locals: { applications: @applications } %>
        </div>
      </div>
    </div>
  </div>
</div>
