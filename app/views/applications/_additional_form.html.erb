<div class="hpanel">
  <div class="panel-heading hbuilt h-bg-navy-blue text-white">
    Additional Information
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="form-group col-md-4">
            <div class="checkbox checkbox-warning margin-top-12">
              <%= form.check_box :accommodation %>
              <%= form.label :accommodation, "Do you want Accommodation?", class: "font-bold" %>
            </div>
          </div>

          <div class="form-group col-md-4">
            <div class="checkbox checkbox-warning margin-top-12">
              <%= form.check_box :medical %>
              <%= form.label :medical, "Do you want Medical?", class: "font-bold" %>
            </div>
          </div>

          <div class="form-group col-md-4">
            <%= label_tag :details_additional, "Additional Comment", class: "control-label" %>
            <%= form.text_area :details_additional, placeholder: "Enter Additional Comments here.", class: "form-control small-placeholder" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-6">
            <%= form.label :statement_of_purpose, "Statement of Purpose", class: "control-label" %>
            <%= form.text_area :statement_of_purpose, class: "form-control small-placeholder" %>
          </div>

          <div class="form-group col-md-6">
            <%= form.label :statement_of_purpose_doc, "Statement of Purpose Document", class: "control-label" %>
            <%= form.file_field :statement_of_purpose_doc, title: "Please Upload Statement of Purpose", class: "form-control" %>
            <%= label_tag "files", application.statement_of_purpose_doc.filename if application.persisted? && application.statement_of_purpose_doc.file.present? %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-md-4">
            <%= form.label :additional_document, "Additional Document 1", class: "control-label" %>
            <%= form.file_field :additional_document, title: "Please Upload Additional Document Here", class: "form-control" %>
            <%= label_tag "files", application.additional_document.filename if application.persisted? && application.additional_document.file.present? %>
          </div>

          <div class="form-group col-md-4">
            <%= form.label :additional_document_1, "Additional Document 2", class: "control-label" %>
            <%= form.file_field :additional_document_1, title: "Please Upload Additional Document Here", class: "form-control" %>
            <%= label_tag "files", application.additional_document_1.filename if application.persisted? && application.additional_document_1.file.present? %>
          </div>

          <div class="form-group col-md-4">
            <%= form.label :additional_document_2, "Additional Document 3", class: "control-label" %>
            <%= form.file_field :additional_document_2, title: "Please Upload Additional Document Here", class: "form-control" %>
            <%= label_tag "files", application.additional_document_2.filename if application.persisted? && application.additional_document_2.file.present? %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
