<div class="col-sm-12 text-center m-b-md">
  <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group col-md-3">
          <%= f.text_field :with_course_name, placeholder: "Search Course Name", class: "form-control" %>
        </div>

        <div class="form-group col-md-3">
          <%= f.text_field :with_reference_no, placeholder: "Search Reference Number", class: "form-control" %>
        </div>

        <div class="form-group col-md-3">
          <%= f.select(:with_intake_month, Application::INTAKE_MONTHS , { include_blank: '- Select Intake Month -' }, { class: "form-control" }) %>
        </div>

        <div class="form-group col-md-3">
          <%= f.select(:with_intake_year, Application::INTAKE_YEARS , { include_blank: '- Select Intake Year -' }, { class: "form-control" }) %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group col-md-3">
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], { include_blank: '- Sort By -' }, { class: "form-control" }) %>
        </div>

        <div class="form-group col-md-3">
          <%= f.submit "Filter", class: "btn btn-primary pull-left ripple btn-sm" %>
          <%= link_to reset_filterrific_url, class: "btn btn-default foat-margin-l ripple btn-sm" do %>
            <i class="fa fa-refresh"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
