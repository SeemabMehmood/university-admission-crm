<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="hpanel">
        <div class="panel-heading hbuilt">
          Reference No: <%= @application.reference_no %>
          <div class="pull-right">
            <%= link_to "Edit", edit_application_path(@application, method: "show"), class: "btn btn-primary btn-xs ripple" %>

            <%= link_to "Back", "javascript:history.back()", class: "btn btn-default btn-xs ripple" %>
          </div>
        </div>
        <div class="panel-body">
          <div class="text-center m-b-md">
             <h3>
                <%= @application.applicant.name.titleize %> - <%= link_to @application.country,
                  representing_country_path(@application.representing_country.id) %>
            </h3>
            <small>
              <%= @application.course_name.titleize %>, <%= @application.intake %> | <%= link_to @application.institute,
                                representing_institution_path(@application.representing_institution.id)  %>
            </small>
            <div class="clearfix"></div>
          </div>

          <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <%= render partial: "applications/applicant_info", locals: { applicant: @application.applicant } %>

            <%= render partial: "applications/education_info", locals: { applicant: @application.applicant } %>

            <%= render partial: "applications/language_details", locals: { applicant: @application.applicant } %>

            <%= render partial: "applications/work_experiences", locals: { applicant: @application.applicant } %>

            <%= render partial: "applications/references", locals: { applicant: @application.applicant } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
