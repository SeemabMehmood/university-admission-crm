<div class="hpanel">
  <div class="panel-heading hbuilt h-bg-navy-blue text-white">
    Educational Information
    <div class="pull-right">
      <%= form.add_nested_fields_link :educations, class: "btn btn-xs btn-warning" do %>
        <i class="fa fa-plus-square"></i>
         Add Education
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <%= form.nested_fields_for :educations do |education| %>
      <div class="row">
        <div class="form-group col-md-2 pad-left-0">
          <%= education.label :qualification, "Major Degree", class: "control-label" %>
          <%= education.text_field :qualification, placeholder: "Enter Major Degree", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= education.label :institute, "Institution", class: "control-label" %>
          <%= education.text_field :institute, placeholder: "Enter Institution", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= education.label :starting_year, "From Year", class: "control-label" %>
          <%= education.text_field :starting_year, placeholder: "Enter Starting year", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= education.label :year_passing, "To Year", class: "control-label" %>
          <%= education.text_field :year_passing, placeholder: "Enter Passing year", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-1 pad-left-0">
          <%= education.label :grade, class: "control-label" %>
          <%= education.text_field :grade, placeholder: "Enter Grade", required: true, class: "form-control small-placeholder" %>
        </div>


        <div class="form-group col-md-2 pad-left-0">
          <%= education.label :scanned_doc, class: "control-label" %>
          <%= education.file_field :scanned_doc, title: "Please Upload Scanned Copy", class: "form-control" %>
          <%= label_tag "files", truncate(education.object.scanned_doc.filename) if education.object.persisted? && education.object.scanned_doc.file.present? %>
        </div>

        <%= link_to "#", class: "btn remove" do %>
          <i class="fa fa-times text-danger"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
