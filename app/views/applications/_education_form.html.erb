<div class="hpanel">
  <div class="panel-heading hbuilt h-bg-navy-blue text-white">
    Educational Information
    <div class="pull-right">
      <%= form.add_nested_fields_link :educations, class: "btn btn-xs btn-warning" do %>
        <i class="fa fa-plus-square"></i>
         Add Education
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <%= form.nested_fields_for :educations do |education| %>

      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="form-group col-md-2 pad-left-0">
              <%= education.label :qualification, class: "control-label" %>
              <%= education.text_field :qualification, placeholder: "Enter Qualification", required: true, class: "form-control small-placeholder" %>
            </div>

            <div class="form-group col-md-2 pad-left-0">
              <%= education.label :institute, class: "control-label" %>
              <%= education.text_field :institute, placeholder: "Enter Institue", required: true, class: "form-control small-placeholder" %>
            </div>

            <div class="form-group col-md-2 pad-left-0">
              <%= education.label :year_passing, class: "control-label" %>
              <%= education.text_field :year_passing, placeholder: "Enter Passing year", required: true, class: "form-control small-placeholder" %>
            </div>

            <div class="form-group col-md-2 pad-left-0">
              <%= education.label :grade, class: "control-label" %>
              <%= education.text_field :grade, placeholder: "Enter Grade", required: true, class: "form-control small-placeholder" %>
            </div>


            <div class="form-group col-md-3 pad-left-0">
              <%= education.label :scanned_doc, class: "control-label" %>
              <%= education.file_field :scanned_doc, title: "Please Upload Scanned Copy", class: "form-control" %>
              <%= label_tag "files", trncate(education.object.scanned_doc.filename) if education.object.persisted? && education.object.scanned_doc.file.present? %>
            </div>

            <%= link_to "#", class: "btn remove" do %>
              <i class="fa fa-times text-danger"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
