<div class="hpanel">
  <div class="panel-heading hbuilt h-bg-navy-blue text-white">
    Work Experiences Information
    <div class="pull-right">
      <%= form.add_nested_fields_link :work_experiences, class: "btn btn-xs btn-warning" do %>
        <i class="fa fa-plus-square"></i>
         Add Work Experience
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <%= form.nested_fields_for :work_experiences do |work_experience| %>
      <div class="row">
        <div class="form-group col-md-2 pad-left-0">
          <%= work_experience.label :employer, class: "control-label" %>
          <%= work_experience.text_field :employer, placeholder: "Employer Name", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= work_experience.label :position, class: "control-label" %>
          <%= work_experience.text_field :position, placeholder: "Position", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= work_experience.label :period, class: "control-label" %>
          <%= work_experience.text_field :period, placeholder: "Period", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= work_experience.label :responsibilities, class: "control-label" %>
          <%= work_experience.text_field :responsibilities, placeholder: "Responsibilities", required: true, class: "form-control small-placeholder" %>
        </div>

        <div class="form-group col-md-2 pad-left-0">
          <%= work_experience.label :scanned_doc, class: "control-label" %>
          <%= work_experience.file_field :scanned_doc, title: "Please Upload Scanned Copy", class: "form-control" %>
          <%= label_tag "files", truncate(work_experience.object.scanned_doc.filename) if work_experience.object.persisted? && work_experience.object.scanned_doc.file.present? %>
        </div>

        <%= link_to "#", class: "btn remove" do %>
          <i class="fa fa-times text-danger"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
