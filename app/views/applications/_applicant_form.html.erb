<div class="hpanel">
  <div class="panel-heading hbuilt h-bg-navy-blue text-white">
    Applicant Information
  </div>
  <%= form.fields_for :applicant do |applicant| %>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-6 border-right">
          <div class="row">
            <div class="form-group col-md-6">
              <%= applicant.label :first_name, class: "control-label" %>
              <%= applicant.text_field :first_name, placeholder: "Enter Applicant First Name", required: true, class: "form-control" %>
            </div>

            <div class="form-group col-md-6">
              <%= applicant.label :last_name, class: "control-label" %>
              <%= applicant.text_field :last_name, placeholder: "Enter Applicant Last Name", required: true, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-4">
              <%= applicant.label :gender, class: "control-label" %>
              <%= applicant.select :gender, Applicant::GENDER , { include_blank: '- Select Gender -' }, { required: true, class: "form-control" } %>
            </div>

            <div class="form-group col-md-4 pad-left-0">
              <%= applicant.label :title, class: "control-label" %>
              <%= applicant.select :title, Applicant::TITLE , { include_blank: '- Select Title -' }, { required: true, class: "form-control" } %>
            </div>

            <div class="form-group col-md-4 pad-left-0">
              <%= applicant.label :marital_status, class: "control-label" %>
              <%= applicant.select :marital_status, Applicant::MARITAL_STATUS , { include_blank: '- Select Marital Status -' }, { required: true, class: "form-control" } %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-6">
              <%= applicant.label :dob, "Date of Birth",class: "control-label" %>
              <%= applicant.text_field :dob, data: { provide: "datepicker" }, placeholder: "Select Date of Birth", required: true, class: "form-control", id: "datepicker" %>
            </div>

            <div class="form-group col-md-6">
              <%= applicant.label :nationality, class: "control-label" %>
              <%= applicant.text_field :nationality, placeholder: "Enter Nationality", required: true, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <div id="passport_no">
                <div class="col-md-6">
                  <%= applicant.label :passport_no, "Passport No", class: "control-label" %>
                  <%= applicant.text_field :passport_no, placeholder: "Enter Passport No", class: "form-control" %>
                </div>

                <div class="col-md-6">
                  <%= applicant.label :passport_file, "Passport No", class: "control-label" %>
                  <%= applicant.file_field :passport_file, title: "Please Upload Passport", class: "form-control" %>
                  <%= label_tag "files", application.applicant.passport_file.filename if application.applicant.persisted? && application.applicant.passport_file.file.present? %>
                </div>
              </div>

              <div class="checkbox passport-check checkbox-warning margin-top-12">
                <%= applicant.check_box :passport %>
                <%= applicant.label :passport, "Do you have a Valid Passport?", class: "font-bold" %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="row">
            <div class="form-group col-md-12">
              <%= label_tag nil, "Phone", class: "control-label" %>
              <div class="clearfix"></div>
              <div class="col-md-4 pad-0">
                <%= applicant.text_field :phone_cc, placeholder: "Country Code", required: true, class: "form-control", title: "Enter Country Code" %>
              </div>
              <div class="col-md-3 pad-0">
                <%= applicant.text_field :phone_code, placeholder: "Code", required: true, class: "form-control", title: "Enter Code" %>
              </div>
              <div class="col-md-5 pad-0">
                <%= applicant.text_field :phone_num, placeholder: "Number", required: true, class: "form-control", title: "Enter Number" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-12">
              <%= label_tag nil, "Mobile", class: "control-label" %>
              <div class="clearfix"></div>
              <div class="col-md-4 pad-0">
                <%= applicant.text_field :mobile_cc, placeholder: "Country Code", class: "form-control", title: "Enter Country Code" %>
              </div>
              <div class="col-md-3 pad-0">
                <%= applicant.text_field :mobile_code, placeholder: "Code", class: "form-control", title: "Enter Code" %>
              </div>
              <div class="col-md-5 pad-0">
                <%= applicant.text_field :mobile_num, placeholder: "Number", class: "form-control", title: "Enter Number" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-12">
              <%= applicant.label :email, class: "control-label" %>
              <%= applicant.text_field :email, placeholder: "Enter Email", class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-md-12">
              <%= applicant.label :skypeid, "Skype ID", class: "control-label" %>
              <%= applicant.text_field :skypeid, placeholder: "Enter Skype Id", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render partial: "applications/education_form", locals: { form: applicant } %>

    <%= render partial: "applications/languages_form", locals: { form: applicant } %>

    <%= render partial: "applications/work_experiences_form", locals: { form: applicant } %>

    <%= render partial: "applications/references_form", locals: { form: applicant } %>
  <% end %>
</div>
