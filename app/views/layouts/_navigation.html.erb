<div id="header">
  <div id="logo" class="light-version">
    <%= link_to root_path do %>
      <%= content_tag :span, "Access Education CRM" %>
    <% end %>
  </div>
  <nav role="navigation">
    <div class="header-link hide-menu">
      <i class="fa fa-bars"></i>
    </div>
    <div class="small-logo">
      <span class="text-primary">Exclusive Admin </span>
    </div>
    <div class="mobile-menu">
      <button type="button" class="navbar-toggle mobile-menu-toggle" data-toggle="collapse" data-target="#mobile-collapse">
          <i class="fa fa-chevron-down"></i>
      </button>
      <div class="collapse mobile-navbar" id="mobile-collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
          </li>
          <li>
            <%= link_to "Change Password", edit_user_password_path %>
          </li>
          <li>
            <%= link_to "Profile", "#" %>
          </li>
        </ul>
      </div>
    </div>
    <div class="navbar-right">
      <ul class="nav navbar-nav no-borders">
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle label-menu-corner", data: { toggle: "dropdown" } do %>
            <i class="fa fa-id-badge"></i>
          <% end %>
          <ul class="dropdown-menu hdropdown animated flipInX">
            <div class="title"><%= current_user.name.titleize %></div>
            <li>
              <%= link_to user_path(current_user) do %>
                <span class="text-primary">View Profile</span>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_path(current_user) do %>
                <span class="text-primary">Edit Profile</span>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path(current_user) do %>
              <span class="text-primary">Change Password</span>
              <% end %>
            </li>
          </ul>
        </li>

        <li class="dropdown">
          <%= link_to destroy_user_session_path, method: :delete do || %>
            <i class="fa fa-sign-out"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</div>
