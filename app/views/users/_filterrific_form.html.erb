<div class="col-sm-12 text-center m-b-md">
  <div class="row">

    <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>

      <div class="col-md-3">
        <%= f.select(:with_role, User::ROLES.map { |r| [r.titleize, r == "admin" ? nil : r.titleize] }, { include_blank: '- Select Role -' }, { class: "form-control" }) %>
      </div>

      <div class="col-md-3">
        <%= f.select(:with_country_name, ApplicationHelper::COUNTRIES, { include_blank: '- Select Country -' }, { class: "form-control" }) %>
      </div>

      <div class="col-md-3">
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], { include_blank: '- Sort By -' }, { class: "form-control" }) %>
      </div>

      <div class="col-md-3">
        <%= f.submit 'Filter', class: "btn btn-primary" %>
        <%= link_to('Reset filters', reset_filterrific_url, class: "btn btn-default" ) %>
      </div>

      <%= render_filterrific_spinner %>
    <% end %>
  </div>
</div>

