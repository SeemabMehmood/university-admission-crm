<div class="col-sm-12 text-center m-b-md">
  <div class="row">

    <%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>

      <% if current_user.admin? %>
        <div class="col-md-3">
          <%= f.select(:with_role, roles_map, { include_blank: '- Select Role -' }, { class: "form-control" }) %>
        </div>
      <% end %>

      <div class="col-md-3">
        <% if current_user.admin? %>
          <%= f.select(:with_country_name, ApplicationHelper::COUNTRIES, { include_blank: '- Select Country -' }, { class: "form-control" }) %>
        <% elsif current_user.agent? %>
          <%= f.select(:with_country_name, current_user.representing_countries.pluck(:name, :id).collect { |n, i| [n.titleize, i] }, { include_blank: '- Select Country -' }, { class: "form-control" }) %>
        <% elsif current_user.branch_officer? %>
          <%= f.select(:with_country_name, current_user.agent.representing_countries.pluck(:name).collect { |n| [n.titleize, n] }, { include_blank: '- Select Country -' }, { class: "form-control" }) %>
        <% end %>
      </div>

      <div class="col-md-3">
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], { include_blank: '- Sort By -' }, { class: "form-control" }) %>
      </div>

      <div class="col-md-3">
        <%= f.submit 'Filter', class: "btn btn-primary" %>
        <%= link_to('Reset filters', reset_filterrific_url, class: "btn btn-default" ) %>
      </div>
    <% end %>
  </div>
</div>

