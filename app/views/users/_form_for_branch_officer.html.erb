<%= form_for(@user.becomes(User), error_form_url(@user)) do |f| %>
  <%= f.hidden_field "#{current_user.type.underscore}_id", value: current_user.id unless current_user.admin? %>

  <%= render "shared/error_messages", target: @user %>

  <div class="row">
    <div class="form-group col-lg-6">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, title: "Please Enter Name", placeholder: "Name", required: true, class: "form-control" %>
    </div>

    <div class="form-group col-lg-6">
      <%= f.label :email, class: "control-label" %>
      <%= f.text_field :email, title: "Please Enter Name", placeholder: "abc@example.com", required: true, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-6">
      <%= f.label :phone_num, class: "control-label" %>
      <%= f.number_field :phone_num, title: "Please Enter Phone", placeholder: "1111111", class: "form-control" %>
    </div>

    <div id="download_csv">
      <div class="form-group col-lg-6">
        <%= f.label :download_csv, class: "control-label" %>
        <%= f.select :download_csv, User::OPTIONS.collect { |o| [o.titleize, o] }, { selected: @user.download_csv }, { class: "form-control" } %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :type, value: "Counsellor" %>
  <%= f.hidden_field :country, value: current_user.country %>
  <%= f.hidden_field :contact_person_name, value: current_user.name %>
  <%= f.hidden_field :contact_person_designation, value: "branch officer"%>
  <%= f.hidden_field :contact_person_email, value: current_user.email %>
  <%= f.hidden_field :contact_person_mobile, value: current_user.phone_num %>

  <div class="text-right m-t-xs">
    <%= f.submit "Submit", class: "btn btn-success submitWizard" %>
  </div>
<% end %>
