<%= form_with(model: @expense, url: @expense.new_record? ? create_expense_path : update_expense_path, method: :post) do |form| %>
  <%= render "shared/error_messages", target: @expense %>
  <%= form.hidden_field :agent_id, value: @expense.agent_id %>

  <div class="row">
    <div class="form-group col-md-12">
      <%= form.label :date, class: "control-label" %>
      <%= form.text_field :date, data: { provide: "datepicker" }, placeholder: "- Select Date -", required: true, class: "form-control", id: "datepicker" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <%= form.label :paid, class: "control-label" %>
      <%= form.number_field :paid, step: :any, placeholder: "- Enter Amount Paid -", required: true, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <%= form.label :reason, "Paid For", class: "control-label" %>
      <%= form.text_field :reason, placeholder: "- Enter Paid For -", required: true, class: "form-control" %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.button :submit, class: "btn btn-success" do %>
      <i class="fa fa-send-o"></i>
      <%= form_submit_text(form.object) %>
    <% end %>

    <%= link_to "Close", "#", data: { dismiss: "modal" }, class: "btn btn-default" %>
  </div>
<% end %>
