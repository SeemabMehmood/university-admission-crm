<div class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="hpanel">
        <div class="panel-heading hbuilt">
          Total Remaining Balance: <%= @incomes.sum(:remaining_balance) %>
          <div class="pull-right">
            <% if current_user.admin? || current_user.agent? %>
              <%= link_to new_income_path, remote: true, class: "btn btn-primary btn-xs ripple" do %>
                <i class="fa fa-plus"></i> Add New Income
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="panel-body no-shadow">
          <%= render partial: "filterrific_income", locals: { filterrific: @filterrific } %>

          <%= render partial: "finance/incomes", locals: { incomes: @incomes } %>
        </div>
      </div>
    </div>
  </div>
</div>
<% if current_user.admin? || current_user.agent? %>
  <div id="add_income" class="modal fade" role="dialog" aria-labelledby="AddIncome"></div>
<% end %>
<div id="edit_income" class="modal fade" role="dialog" aria-labelledby="EditIncome"></div>
