<div id="filterrific_results">
  <table class="table table-stripped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Total Paid</th>
        <th data-breakpoints="xs md" data-title="Paid For">Paid For</th>
        <th data-breakpoints="xs md" data-title="Created At">Created At</th>
        <th data-breakpoints="xs md" data-title="Updated At">Updated At</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% expenses.each do |expense| %>
        <tr>
          <td>
            <%= expense.date %>
          </td>
          <td>
            <%= expense.paid.to_f %>
          </td>
          <td>
            <%= expense.reason %>
          </td>
          <td>
            <%= format_datetime(expense.created_at) %>
          </td>
          <td>
            <%= format_datetime(expense.updated_at) %>
          </td>
          <td>
            <%= link_to edit_expense_path(expense), remote: true do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </td>
          <td>
            <%= link_to destroy_expense_path(expense), title: "Delete", method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id="paging-ui-container"></div>
</div>
