<div class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="hpanel">
        <div class="panel-heading hbuilt">
          Total Expenses: <%= @expenses.sum(:paid) %>
          <div class="pull-right">
            <%= link_to new_expense_path, remote: true, class: "btn btn-primary btn-xs ripple" do %>
              <i class="fa fa-plus"></i> Add New Expense
            <% end %>
          </div>
        </div>
        <div class="panel-body no-shadow">
          <%= render partial: "filterrific_expense", locals: { filterrific: @filterrific } %>

          <%= render partial: "finance/expenses", locals: { expenses: @expenses } %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="add_expense" class="modal fade" role="dialog" aria-labelledby="AddExpense"></div>
