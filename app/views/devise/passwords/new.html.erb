<h4>Forgot your password?</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "control-label" %>
    <%= f.email_field :email, autofocus: true, title: "Please Enter Your Email", placeholder: "example@gmail.com", required: true, class: "form-control" %>
  </div>

  <%= f.submit "Send Reset Password Instructions", class: "btn btn-primary btn-block" %>
<% end %>
