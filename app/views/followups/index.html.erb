<div class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="hpanel">
        <div class="panel-heading hbuilt">
          Followups: <%= @followups.count %>
          <div class="pull-right">
            <% if can? :create, Followup %>
              <%= link_to new_followup_path, class: "btn btn-primary btn-xs ripple" do %>
                <i class="fa fa-plus"></i> Add Followup
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="panel-body no-shadow">
          <%= render partial: "filterrific_form", locals: { filterrific: @filterrific } %>

          <%= render partial: "followups/list", locals: { followups: @followups } %>
        </div>
      </div>
    </div>
  </div>
</div>
