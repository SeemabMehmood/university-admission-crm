$("#application_representing_institution_ids").empty();
x = document.getElementById("application_representing_institution_ids");

JSON.parse('<%= j @representing_institutions.to_json.html_safe %>').forEach(function(o) {
    c = document.createElement("option");
    c.text = o[0];
    c.value = o[1];
    x.options.add(c);
});

$(".institutions").show(1000);

$("#application_representing_institution_ids").on("change", function(event) {
  $(".application-form").show(1000);
});
